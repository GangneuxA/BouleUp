{% extends 'base.html.twig' %}

{% block body %}

</br>

<main class="container">
  <div class="p-1 p-md-2 mb-2 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-6 fst-italic">Formulaire de contact</h1>
    </div>
  </div>


<div class="container">
{% for message in app.flashes('success') %}
<div class="alert alert-success mt-4">
{{message}}
</div>
{% endfor %}

<div class="bg-white p-5 contact-form">
    <div class="form-group">
{{ form_start(our_form) }}
    {{ form_row(our_form.name, {'attr': {'class': 'form-control'}}) }}


</div>
<div class="form-group">
    {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

</div>
<div class="form-group">
    {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

</div>

</br>

<div class="row">
    <input type="submit" value="Send" class="btn btn-primary py-3 px-2">
</div>

{{ form_end(our_form) }}
</div>

</div>

{% endblock %}