{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block body %}
    <h1>Create new Event</h1>
    

    <div class="container">
        <div class="row">
            <div class="login-form bg-light mt-4 p-4">
            {{ form_start(form)}}

            {{ form_row(form.date) }}
            {{ form_row(form.label) }}
            {{ form_row(form.description) }}
            
            <div class="row">
                <div class="col"> {{ form_row(form.cashprize) }}</div>
                <div class="col"> {{ form_row(form.maxEntrant) }}</div>
            </div>           
            {{ include('event/_form.html.twig') }} 

            {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a class="btn btn-primary" href ="{{ path('app_event_index') }}">back to list</a>
{% endblock %}
