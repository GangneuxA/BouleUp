{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

</br>
    <div class="container">
        <div class="row">
            {% if (is_granted('ROLE_ADMIN')) or (is_granted('ROLE_VIP')) %}
            <a class="btn btn-primary" href ="{{ path('app_event_new') }}">Create new event</a>
            {% endif %}
        </div>
    </div>

    {% for event in events %}
    <div class="container">
     <div class="article bg-light mt-4 p-4">
     <h1><span>{{ event.label }}</span></h1>
        <span>Date de l'event :</span>
        <span>{{ event.date ? event.date|date('Y-m-d H:i') : '' }}</span>
        {% if is_granted('ROLE_ADMIN')%}
        <a class="btn btn-primary float-end" href ="{{ path('app_event_edit', {'id': event.id}) }}" role="button">edit</a>
        {% endif %}
        <a class="btn btn-primary float-end" href ="{{ path('app_event_show', {'id': event.id}) }}" role="button">show</a>
        </br>
        </div>
    </div>
    {% else %}
    <div class="container">
        <div class="article bg-light mt-4 p-4">
            <div colspan="4"> no records found</div>
        </div>
    </div>
    {% endfor %}
    
{% endblock %}
