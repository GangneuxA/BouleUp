  {% for product in products %}
  <div>
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <h3 class="mb-0"><td>{{ product.label }}</td></h3>
          <hr>  
          <div class="mb-1 text-muted"><td>{{ product.description }}</td></div>
          <p class="card-text mb-auto"><td>{{ product.price }}€</td></p>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-primary" style="width:130px">
                    Buy
                    </a>
                    {% else %}
                    <a href="/login" class="btn btn-primary" style="width:130px">buy</a>
                    {% endif %}
                    
                </td>
