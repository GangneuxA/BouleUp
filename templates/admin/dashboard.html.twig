{% extends "@EasyAdmin/page/content.html.twig" %}

{% block content %}

<!-- Custom styles for this template -->
    <link href="dashboard.css" rel="stylesheet">
  </head>
  <body>
            

        <main>
    <br>
    </br>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Total User</h4>
          </div>
          <div class="card-body">
              <ul class="list-unstyled mt-3 mb-4">
              <h2>{{ countAllUser['value'] }}</h2>
            </ul>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Total Article</h4>
          </div>
          <div class="card-body">
              <ul class="list-unstyled mt-3 mb-4">
              <h2>{{ countAllArticle['value'] }}</h2>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <hr>
    </hr>


      <h2>Event List</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Event Name</th>
              <th scope="col">Number of registered</th>
              <th scope="col">Date</th>
              <th scope="col">CashPrize</th>
              <th scope="col">Registration limit </th>
            </tr>
          </thead>
          <tbody>
          {% for event in allEvent %}
            <tr>
              <td>{{ event.label}}</td>
              <td>{{ event.nbEntrant }}</td>
              <td>{{ event.Date }}</td>
              <td>{{ event.CashPrize }}</td>
              <td>{{ event.maxEntrant }}</td>
            </tr>    
            {% endfor %}      
          </tbody>
        </table>
      </div>

    <br>
    </br>
    <hr>
    </hr>

    </main>
  </div>
</div>



  

{% endblock %}